<Page x:Class="EmployeeManager.EmployeeEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:EmployeeManager"
mc:Ignorable="d"
      Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row ="0" VerticalAlignment="Center" Margin="25 0 25 0">
            <Label Content="Имя" Margin="0 0 0 0" FontSize="20"/>
            <TextBox x:Name="NameTextBox" Margin="0 10 0 10" FontSize="20"/>

            <Label Content="Должность" Margin="0 10 0 0" FontSize="20"/>
            <TextBox x:Name="PositionTextBox" Margin="0 10 0 0" FontSize="20" />
        </StackPanel>
        <Button Click="SaveEmployeeInfo" Content="Сохранить" Margin="10" Height="42" Width="120" Grid.Row="1"/>
    </Grid>
</Page>
