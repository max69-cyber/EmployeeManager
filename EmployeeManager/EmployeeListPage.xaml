<Page x:Class="EmployeeManager.EmployeeListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:EmployeeManager"
mc:Ignorable="d"
      Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="EmployeeDataGrid" Grid.Row="0" Margin="10 10 10 10">
        </DataGrid>
        <Button  Click="EditEmployee" Content="Редактировать" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="150"/>
    </Grid>
</Page>
